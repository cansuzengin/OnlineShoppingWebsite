@model MvcOnlineShopping.Models.Entity.TBLAdmin
@{
    ViewBag.Title = "FetchAdmin";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateAdmin", "Admin", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />
        <label>Ad</label>
        @Html.TextBoxFor(k => k.Name, new { @class = "form-control" })
        <br />
        <label>Soyad</label>
        @Html.TextBoxFor(k => k.Surname, new { @class = "form-control" })
        <br />
        <label>Email</label>
        @Html.TextBoxFor(k => k.Email, new { @class = "form-control" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(k => k.Password, new { @class = "form-control" })
        <br />
        <label>Yetki</label>
        @Html.TextBoxFor(k => k.Authority, new { @class = "form-control" })
        <br />
    </div>
    <div><button class="btn btn-group" style="background-color:#680f90; color:#ffffff">Güncelle</button></div>
}
@model MvcOnlineShopping.Models.Classes.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300" rel="stylesheet">
    <title>Sepeti Onayla</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Spartan',sans-serif;
        }

        h1 {
            font-size: 50px;
            line-height: 64px;
            color: #222;
        }

        h2 {
            font-size: 46px;
            line-height: 54px;
            color: #222;
        }

        h4 {
            font-size: 20px;
            color: #222;
        }

        h6 {
            font-weight: 700;
            font-size: 12px;
        }

        p {
            font-size: 16px;
            color: #465b52;
            margin: 15px 0 20px 0;
        }

        body {
            width: 100%;
        }

        #shopping {
            border-collapse: collapse;
            width: 60%;
            margin-top: 70px;
            margin-left: 20px;
        }

            #shopping img {
                height: 3rem;
            }

            #shopping td, #shopping th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #shopping tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #shopping tr:hover {
                background-color: #898282;
                color: #fff;
            }

            #shopping th {
                padding-top: 15px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #2c3e50;
                color: white;
            }

        .shopping-cart {
            position: absolute;
            top: 20%;
            right: 2rem;
            padding: 1rem;
            border-radius: 1rem;
            border: .1rem solid black;
            box-shadow: #808080;
            width: 25rem;
            background: #fff;
        }

            .shopping-cart .box {
                display: flex;
                align-items: center;
                gap: 1rem;
                position: relative;
                margin: 1rem 0;
            }

                .shopping-cart .box .row a {
                    text-decoration: none;
                }

                .shopping-cart .box img {
                    height: 3rem;
                }

                .shopping-cart .box .fa-trash {
                    font-size: 1rem;
                    top: 50%;
                    right: 2rem;
                    cursor: pointer;
                    color: black;
                    transform: translateY(-50%);
                    transform: translateX(1000%);
                    padding-right: 10px;
                }

                    .shopping-cart .box .fa-trash:hover {
                        color: #ff00dc;
                    }

                .shopping-cart .box .content h3 {
                    color: black;
                    font-size: 1rem;
                    padding-bottom: 1rem;
                }

                .shopping-cart .box .content span {
                    color: black;
                    font-size: 0.8rem;
                }

                .shopping-cart .box .content .quantity {
                    padding-left: 1rem;
                }

            .shopping-cart .total {
                font-size: 1.2rem;
                padding: 1rem;
                text-align: center;
                color: black;
            }

        .btn {
            margin-top: 1rem;
            display: inline-block;
            padding: .8rem 3rem;
            font-size: 0.8rem;
            border-radius: .5rem;
            border: .2rem solid black;
            color: white;
            cursor: pointer;
            width: 100%;
        }

            .btn:hover {
                background: #2c3e50;
                color: #fff;
            }

        .shopping-cart .btn {
            display: block;
            text-align: center;
            margin: 1rem;
            text-decoration: none;
        }

        .shopping-cart .box .row .column {
            border-radius: 1rem;
            border: .1rem solid black;
            box-shadow: #808080;
        }

        .right {
            margin-left: 20px;
            width: 90%;
            height: 80%;
            display: flex;
            flex-direction: column;
            margin-top: 10px;
            box-shadow: 0 0 8px 5px rgba(153,153,153,0.705);
            border-radius: 15px;
        }

        .container {
            margin-top: 8vh;
            height: 95vh;
            width: 120vh;
            display: flex;
            overflow: hidden;
        }

        .main {
            width: 50%;
            height: 50%;
            margin-left: 100px;
            margin-top: 15px;
        }

        .main2 {
            top: 80px;
            width: 50%;
            height: 70%;
            margin: auto;
        }

            .main2 .text {
                width: 100%;
                padding: 12px 20px;
                margin: 8px 0;
                display: inline-block;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

        .card {
            box-shadow: 0 0 20px 9px rgba(153,153,153,0.705);
            max-width: 400px;
            margin: auto;
            text-align: center;
            font-family: arial;
        }

        .title {
            color: grey;
            font-size: 18px;
        }

        button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 15%;
            height: 20%;
            font-size: 12px;
            float:right
        }

        a {
            text-decoration: none;
            font-size: 22px;
            color: black;
        }

            button:hover, a:hover {
                opacity: 0.7;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaaaaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: #000;
                text-decoration: none;
                cursor: pointer;
            }

        .input-group {
            position: absolute;
            top: 200px;
            width: 450px;
            transition: .5s;
        }
        .input-group2 {
            position: absolute;
            top: 450px;
            width: 450px;
            transition: .5s;
        }

        .input-field {
            width: 100%;
            padding: 10px 0;
            border: none;
            margin: 5px 0;
            background: transparent;
            border-bottom: 1px solid rgba(153,153,153,0.705);
            outline: none;
        }

        .submit-btn {
            display: block;
            width: 85%;
            padding: 10px;
            border: none;
            background: linear-gradient(to right, #1c1c2e,#087fce);
            cursor: pointer;
            color: #ffff;
            font-size: 15px;
            font-weight: 600;
            margin: auto;
            outline: none;
            border-radius: 35px;
        }

        textarea {
            width: 100%;
            height: 70px;
        }

        dialog {
            width: 350px;
            height: 250px;
            padding: 10px;
            border: none;
            border-radius: 20px;
            margin: 10% auto;
            position: relative;
            font-size: 15px;
            box-shadow: 0 0 20px 9px rgba(153,153,153,0.705);
            margin: 10% auto;
            padding: 10px;
            overflow: hidden;
        }

            dialog::backdrop {
                background: rgb(99,110,114,.9);
            }

            dialog div {
                border-bottom: 1px solid #b2bec3;
                padding: 20px;
                float: right;
                width: 100%;
                padding: 10px 0;
                border: none;
                margin: 5px 0;
                background: transparent;
                border-bottom: 1px solid rgba(153,153,153,0.705);
                outline: none;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaaaaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: #000;
                text-decoration: none;
                cursor: pointer;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="right">
            <div class="main2">
                <form class="input-group" method="post" action="/ConfirmCart/OrderCheck/@ViewBag.id">
                    <select class="input-field" name="Address" id="Address">
                        <option value="null">Adres Seçiniz...</option>
                        @foreach (var value in Model.value10)
                        {
                            <option value="@value.Id">
                                @Html.ActionLink(@value.Address, "Index", "ConfirmCart", new { Address = @value.Id }, new { @class = "input1" })
                            </option>

                        }
                    </select>
                    <select class="input-field" name="Cargo" id="Cargo">
                        <option value="null">Kargo Seçiniz...</option>
                        @foreach (var value in Model.value9)
                        {
                            <option value="@value.Id">
                                @Html.ActionLink(@value.Name, "Index", "ConfirmCart", new { Cargo = @value.Id }, new { @class = "input1" })
                            </option>
                        }
                    </select>
                   
                    <button type="submit" class="btn">Onayla</button>
                </form>
                
            </div>
        </div>
    </div>


    <div class="shopping-cart">
        <div class="box">
            <div class="row">
                @foreach (var value in Model.value3)
                {
                    <a href="/ProductPage/Index/@value.ProductId">
                        <br />
                        <img src="@value.TBLProduct.Image" />

                        <div class="content">
                            <h3>@value.TBLProduct.Name</h3>
                            <span class="price">@value.TBLProduct.Price</span>
                            <span class="quantity">@value.Piece</span>

                            <a href="/MemberHomePage/RemoveCart/@value.Id"><i class="fas fa-trash"></i></a>
                        </div>
                    </a>

                }

            </div>
        </div>

        <div class="total"> Toplam : @ViewBag.value</div>
    </div>
</body>
</html>

@model MvcOnlineShopping.Models.Classes.Class1
@{
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Shopping</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Spartan',sans-serif;
        }

        h1 {
            font-size: 50px;
            line-height: 64px;
            color: #222;
        }

        h2 {
            font-size: 46px;
            line-height: 54px;
            color: #222;
        }

        h4 {
            font-size: 20px;
            color: #222;
        }

        h6 {
            font-weight: 700;
            font-size: 12px;
        }

        p {
            font-size: 16px;
            color: #465b52;
            margin: 15px 0 20px 0;
        }

        body {
            width: 100%;
        }



        #shopping {
            border-collapse: collapse;
            width: 65%;
            margin-top: 20px;
            margin-left: 20px;
        }

            #shopping img {
                height: 3rem;
            }

            #shopping td, #shopping th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #shopping tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #shopping tr:hover {
                background-color: #898282;
                color: #fff;
            }

            #shopping th {
                padding-top: 15px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #2c3e50;
                color: white;
            }

        .shopping-cart {
            position: absolute;
            top: 20%;
            right: 3rem;
            padding: 1rem;
            border-radius: 1rem;
            border: .1rem solid black;
            box-shadow: #808080;
            width: 40rem;
            background: #fff;
        }

            .shopping-cart .box {
                display: flex;
                align-items: center;
                gap: 1rem;
                position: relative;
                margin: 1rem 0;
                margin-left: 20px;
            }

                .shopping-cart .box .row a {
                    text-decoration: none;
                }

                .shopping-cart .box img {
                    height: 5rem;
                }

                .shopping-cart .box .fa-trash {
                    font-size: 1.5rem;
                    top: 50%;
                    right: 2rem;
                    cursor: pointer;
                    color: black;
                    transform: translateY(-50%);
                    transform: translateX(700%);
                    padding-right: 10px;
                }

                    .shopping-cart .box .fa-trash:hover {
                        color: #ff00dc;
                    }

                .shopping-cart .box .content h3 {
                    color: black;
                    font-size: 1.5rem;
                    padding-bottom: 1rem;
                }

                .shopping-cart .box .content span {
                    color: black;
                    font-size: 1.5rem;
                }

                .shopping-cart .box .content .quantity {
                    padding-left: 2rem;
                }

            .shopping-cart .total {
                font-size: 1.5rem;
                padding: 1rem;
                text-align: center;
                color: black;
            }

        .btn {
            margin-top: 1rem;
            display: inline-block;
            padding: .8rem 3rem;
            font-size: 1.2rem;
            border-radius: .5rem;
            border: .2rem solid black;
            color: black;
            cursor: pointer;
        }

            .btn:hover {
                background: #2c3e50;
                color: #fff;
            }

        .shopping-cart .btn {
            display: block;
            text-align: center;
            margin: 1rem;
            text-decoration: none;
            width: 340px;
        }

        .shopping-cart .box .row .column {
            border-radius: 1rem;
            border: .1rem solid black;
            box-shadow: #808080;
        }

        #product1 {
            text-align: center;
        }

            #product1 .pro {
                width: 18%;
                min-width: 180px;
                padding: 10px 12px;
                border: 1px solid #cce7d0;
                border-radius: 15px;
                cursor: pointer;
                box-shadow: 20px 20px 30px rgba(0,0,0,0.02);
                margin: 15px 0;
                transition: 0.2s ease;
                position: relative;
            }

                #product1 .pro:hover {
                    box-shadow: 20px 20px 30px rgba(0,0,0,0.06);
                }

                #product1 .pro img {
                    width: 90%;
                    border-radius: 20px;
                }

        .section-p1 {
            padding: 40px 1px;
        }

        .section-m1 {
            margin: 40px 0;
        }

        #product1 .pro .des {
            text-align: start;
            padding: 10px 0px;
        }

            #product1 .pro .des span {
                color: #606063;
                font-size: 12px;
            }

            #product1 .pro .des h5 {
                padding-top: 7px;
                color: #1a1a1a;
                font-size: 14px;
            }

            #product1 .pro .des i {
                font-size: 12px;
                color: rgb(243, 181, 25);
            }

            #product1 .pro .des h4 {
                padding-top: 7px;
                font-size: 15px;
                font-weight: 700;
                color: #088178;
            }

        #product1 .pro .cart {
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50px;
            background-color: #e8f6ea;
            font-weight: 500;
            color: #373333;
            border: 1px solid #cce7d0;
            position: absolute;
            bottom: 20px;
            right: 10px;
        }

            #product1 .pro .cart:hover {
                background-color: #eacaca;
            }

        #product1 .pro .heart {
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50px;
            background-color: #e8f6ea;
            font-weight: 500;
            color: #a01212;
            border: 1px solid #cce7d0;
            position: absolute;
            bottom: 20px;
            right: 60px;
        }

            #product1 .pro .heart:hover {
                background-color: #eacaca;
            }


        #product1 .pro-container {
            display: flex;
            justify-content: space-between;
            padding-top: 20px;
            padding-left: 0px;
            padding-right: 300px;
            flex-wrap: wrap;
        }

            #product1 .pro-container a {
                text-decoration: none;
            }

        .like {
            margin-top: 100px;
            width: 100%;
            height: 35px;
            border: 1px solid #cce7d0;
            font-size: 18px;
            font-family: 'Times New Roman', Times, serif;
            background-color: #eee9e9;
            text-align: center;
        }
    </style>
</head>
<body>
    <section class="section-p1">
        <table id="shopping">
            <tr>
                <th>Ürün Id</th>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Tutar</th>
            </tr>
            @foreach (var value in Model.value3)
            {
                <tr>
                    <td><span class="quantity">@value.ProductId</span></td>
                    <td>
                        <img src="@value.TBLProduct.Image" />
                        <label style="margin:auto">@value.TBLProduct.Name</label>
                    </td>
                    <td><span class="quantity">@value.Piece</span></td>
                    <td><span class="price">@value.TBLProduct.Price</span></td>
                </tr>
            }
        </table>
        <div class="shopping-cart">
            <div class="box">
                <div class="row">
                    @{
                        int? cat = 0;
                        foreach (var value in Model.value3)
                        {
                            <a href="/ProductPage/Index/@value.ProductId">
                                <br />
                                <img src="@value.TBLProduct.Image" />

                                <div class="content">
                                    <h3>@value.TBLProduct.Name</h3>
                                    <span class="price">Fiyat: @value.TBLProduct.Price</span>
                                    <span class="quantity">Adet: @value.Piece</span>

                                    <a href="/MemberHomePage/RemoveCart/@value.Id"><i class="fas fa-trash"></i></a>
                                </div>
                            </a>
                            cat = value.CategoryId;
                        }
                    }

                    <div class="total"> Toplam : @ViewBag.value</div>
                    <a href="/ConfirmCart/Index/@cat" class="btn">Sepeti Onayla</a>
                </div>
            </div>
        </div>
    </section>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <section id="product1" class="section-p1">
        @if (ViewBag.id != null)
        {
            <div class="like">
                <div>Kombinleyebileceğiniz Ürünler</div>
            </div>
            <div class="pro-container">

                @foreach (var value in ViewBag.kombin)
                {
                    if (value.GenderId == ViewBag.id2)
                    {
                        <a href="/ProductPage/Index/@value.Id">
                            <div class="pro">
                                <img src="@value.Image" alt="" />
                                <div class="des">
                                    <span>@value.TBLBrand.Name</span>
                                    <h5>@value.Name</h5>
                                    @if (value.Star != null)
                                    {
                                        <div class="form-group">
                                            <span class="text-warning">
                                                @for (int? x = 0; x < value.Star; x++)
                                                {
                                                    <i class="glyphicon glyphicon-star"></i>
                                                }
                                                @for (int? x = value.Star; x < 5; x++)
                                                {
                                                    <i class="glyphicon glyphicon-star-empty"></i>
                                                }

                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        for (int? x = 0; x < 5; x++)
                                        {
                                            <i class="glyphicon glyphicon-star-empty"></i>
                                        }
                                    }

                                    <h4>@value.Price</h4>
                                </div>

                                <a href="/MemberHomePage/AddingCart/@value.Id" class="cart"><i class="fa fa-shopping-bag" aria-hidden="true"></i></a>
                                @{
                                    var keep = 0;
                                    foreach (var x in ViewBag.like)
                                    {
                                        if (value.Id == x)
                                        {
                                            <a href="/MemberHomePage/AddingLike/@value.Id" class="heart"><i class="glyphicon glyphicon-heart" aria-hidden="true"></i></a>
                                            keep = 1;
                                        }
                                    }

                                    if (keep == 0)
                                    {
                                        <a href="/MemberHomePage/AddingLike/@value.Id" class="heart"><i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i></a>
                                    }

                                }
                            </div>
                        </a>
                    }

                }

            </div>
        }
    </section>
</body>
</html>
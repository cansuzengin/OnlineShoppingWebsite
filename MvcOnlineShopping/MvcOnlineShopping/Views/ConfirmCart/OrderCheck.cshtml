
@{
    ViewBag.Title = "OrderCheck";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Sepeti Onayla</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Spartan',sans-serif;
        }

        h1 {
            font-size: 50px;
            line-height: 64px;
            color: #222;
        }

        h2 {
            font-size: 46px;
            line-height: 54px;
            color: #222;
        }

        h4 {
            font-size: 20px;
            color: #222;
        }

        h6 {
            font-weight: 700;
            font-size: 12px;
        }

        p {
            font-size: 16px;
            color: #465b52;
            margin: 15px 0 20px 0;
        }

        body {
            width: 100%;
        }

        .check {
            text-align: center;
            font-size: 20px;
            font-family: 'Times New Roman';
            margin-top: 1px;
        }

            .check img {
                display: block;
                margin: auto;
            }

            .check button {
                display: block;
                margin: auto;
                margin-top: 3%;
                width: 20%;
                height: 35px;
                border-radius: 8px;
                background: #eceded;
                border: .1rem solid black;
                cursor: pointer;
            }

            .check a {
                text-decoration: none;
                color: black;
                font-size: 15px;
            }


        #product1 {
            text-align: center;
        }

            #product1 .pro {
                width: 18%;
                min-width: 180px;
                padding: 10px 12px;
                border: 1px solid #cce7d0;
                border-radius: 15px;
                cursor: pointer;
                box-shadow: 20px 20px 30px rgba(0,0,0,0.02);
                margin: 15px 0;
                transition: 0.2s ease;
                position: relative;
            }

                #product1 .pro:hover {
                    box-shadow: 20px 20px 30px rgba(0,0,0,0.06);
                }

                #product1 .pro img {
                    width: 90%;
                    border-radius: 20px;
                }

        .section-p1 {
            padding: 40px 1px;
        }

        .section-m1 {
            margin: 40px 0;
        }

        #product1 .pro .des {
            text-align: start;
            padding: 10px 0px;
        }

            #product1 .pro .des span {
                color: #606063;
                font-size: 12px;
            }

            #product1 .pro .des h5 {
                padding-top: 7px;
                color: #1a1a1a;
                font-size: 14px;
            }

            #product1 .pro .des i {
                font-size: 12px;
                color: rgb(243, 181, 25);
            }

            #product1 .pro .des h4 {
                padding-top: 7px;
                font-size: 15px;
                font-weight: 700;
                color: #088178;
            }

        #product1 .pro .cart {
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50px;
            background-color: #e8f6ea;
            font-weight: 500;
            color: #373333;
            border: 1px solid #cce7d0;
            position: absolute;
            bottom: 20px;
            right: 10px;
        }

            #product1 .pro .cart:hover {
                background-color: #eacaca;
            }

        #product1 .pro .heart {
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50px;
            background-color: #e8f6ea;
            font-weight: 500;
            color: #a01212;
            border: 1px solid #cce7d0;
            position: absolute;
            bottom: 20px;
            right: 60px;
        }

            #product1 .pro .heart:hover {
                background-color: #eacaca;
            }


        #product1 .pro-container {
            display: flex;
            justify-content: space-between;
            padding-top: 20px;
            padding-left: 0px;
            padding-right: 300px;
            flex-wrap: wrap;
        }

            #product1 .pro-container a {
                text-decoration: none;
            }

        .like {
            margin-top: 100px;
            width: 100%;
            height: 35px;
            border: 1px solid #cce7d0;
            font-size: 18px;
            font-family: 'Times New Roman', Times, serif;
            background-color: #eee9e9;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="check">
        <img src="~/images/check.jpg" alt="" style="width: 20%; " />
        <label>Siparişiniz Onaylandı!</label>
        <a href="/MemberHomePage/Orders/"><button>Siparişlerime Git</button></a>
    </div>

    <div class="like">
        <div>Bu Kategoride En Beğenilen Ürünler</div>
    </div>

    <section id="product1" class="section-p1">
        <div class="pro-container">
            @{
                int index = 0;
                foreach (var value1 in ViewBag.best)
                {
                    foreach (var value in ViewBag.product)
                    {
                        if (value.Id == value1)
                        {
                            index++;
                            <a href="/ProductPage/Index/@value.Id">
                                <div class="pro">
                                    <img src="@value.Image" alt="" />
                                    <div class="des">
                                        <span>@value.TBLBrand.Name</span>
                                        <h5>@value.Name</h5>
                                        @if (value.Star != null)
                                        {
                                            <div class="form-group">
                                                <span class="text-warning">
                                                    @for (int? x = 0; x < value.Star; x++)
                                                    {
                                                        <i class="glyphicon glyphicon-star"></i>
                                                    }
                                                    @for (int? x = value.Star; x < 5; x++)
                                                    {
                                                        <i class="glyphicon glyphicon-star-empty"></i>
                                                    }

                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            for (int? x = 0; x < 5; x++)
                                            {
                                                <i class="glyphicon glyphicon-star-empty"></i>
                                            }
                                        }

                                        <h4>@value.Price</h4>
                                    </div>

                                    <a href="/MemberHomePage/AddingCart/@value.Id" class="cart"><i class="fa fa-shopping-bag" aria-hidden="true"></i></a>
                                    @{
                                        var keep = 0;
                                        foreach (var x in ViewBag.like)
                                        {
                                            if (value.Id == x)
                                            {
                                                <a href="/MemberHomePage/AddingLike/@value.Id" class="heart"><i class="glyphicon glyphicon-heart" aria-hidden="true"></i></a>
                                                keep = 1;
                                            }
                                        }

                                        if (keep == 0)
                                        {
                                            <a href="/MemberHomePage/AddingLike/@value.Id" class="heart"><i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i></a>
                                        }

                                    }
                                </div>
                            </a>
                        }
                    }
                }
            }
        </div>
    </section>

</body>
</html>

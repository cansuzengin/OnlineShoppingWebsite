@model MvcOnlineShopping.Models.Classes.Class1
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300" rel="stylesheet">
    <title>Shopping</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Spartan',sans-serif;
        }

        h1 {
            font-size: 50px;
            line-height: 64px;
            color: #222;
        }

        h2 {
            font-size: 46px;
            line-height: 54px;
            color: #222;
        }

        h4 {
            font-size: 20px;
            color: #222;
        }

        h6 {
            font-weight: 700;
            font-size: 12px;
        }

        p {
            font-size: 16px;
            color: #465b52;
            margin: 15px 0 20px 0;
        }

        body {
            width: 100%;
        }



        #shopping {
            border-collapse: collapse;
            width: 60%;
            margin-top: 70px;
            margin-left: 20px;
        }

            #shopping img {
                height: 3rem;
            }

            #shopping td, #shopping th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #shopping tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #shopping tr:hover {
                background-color: #898282;
                color: #fff;
            }

            #shopping th {
                padding-top: 15px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #2c3e50;
                color: white;
            }

        .shopping-cart {
            position: absolute;
            top: 20%;
            right: 2rem;
            padding: 1rem;
            border-radius: 1rem;
            border: .1rem solid black;
            box-shadow: #808080;
            width: 25rem;
            background: #fff;
        }

            .shopping-cart .box {
                display: flex;
                align-items: center;
                gap: 1rem;
                position: relative;
                margin: 1rem 0;
            }
                .shopping-cart .box .row a {
                    text-decoration: none;
                }

                .shopping-cart .box img {
                    height: 3rem;
                }

                .shopping-cart .box .fa-trash {
                    font-size: 1rem;
                    position: absolute;
                    top: 50%;
                    right: 2rem;
                    cursor: pointer;
                    color: black;
                    transform: translateY(-50%);
                }

                    .shopping-cart .box .fa-trash:hover {
                        color: #ff00dc;
                    }

                .shopping-cart .box .content h3 {
                    color: black;
                    font-size: 1rem;
                    padding-bottom: 1rem;
                }

                .shopping-cart .box .content span {
                    color: black;
                    font-size: 0.8rem;
                }

                .shopping-cart .box .content .quantity {
                    padding-left: 1rem;
                }

            .shopping-cart .total {
                font-size: 1.2rem;
                padding: 1rem;
                text-align: center;
                color: black;
            }

        .btn {
            margin-top: 1rem;
            display: inline-block;
            padding: .6rem 3rem;
            font-size: 0.8rem;
            border-radius: .5rem;
            border: .2rem solid black;
            color: black;
            cursor: pointer;
            width:70%;
        }

            .btn:hover {
                background: #2c3e50;
                color: #fff;
            }

        .shopping-cart .btn {
            display: block;
            text-align: center;
            margin: 1rem;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <table id="shopping">
        <tr>
            <th>Ürün Id</th>
            <th>Ürün</th>
            <th>Tutar</th>
        </tr>
        @foreach (var value in Model.value8)
        {
            <tr>
                <td><span class="quantity">@value.ProductId</span></td>
                <td>
                    <img src="@value.TBLProduct.Image" />
                    <label style="margin:auto">@value.TBLProduct.Name</label>
                </td>
                <td>
                    <span class="price">@value.TBLProduct.Price</span>
                </td>
            </tr>
        }
        }
    </table>
    <div class="shopping-cart">
        <div class="box">
            <div class="row">
                @foreach (var value in Model.value8)
                {
                    <a href="/ProductPage/Index/@value.ProductId">
                        <br />
                        <img src="@value.TBLProduct.Image" />

                        <div class="content">
                            <h3>@value.TBLProduct.Name</h3>
                            <span class="price">Fiyat: @value.TBLProduct.Price</span>
                            
                        </div>
                        <div class="content">
                            <span class="price">Adet: @value.Piece</span>
                            <span class="price">Beden: @value.Size</span>
                        </div>
                    </a>
                    <br />
                    <div class="content">
                        <h3>Teslimat Adresi</h3>
                        <span class="Address">@value.TBLAddress.Address</span>
                    </div>
                    @Html.ActionLink("Siparişi İptal Et", "RemoveOrder", new { Id = value.Id }, new
                        {
                            @class
               = "btn",
                            onclick = "return confirm('İptal Etmek istiyor musunuz?')"
                        })
                    <label>-------------------------------------------------------------</label>
                }
            </div>
        </div>

        <div class="total"> Toplam : @ViewBag.value</div>

    </div>
</body>
</html>
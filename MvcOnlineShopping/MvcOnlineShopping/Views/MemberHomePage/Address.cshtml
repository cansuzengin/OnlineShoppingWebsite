@model MvcOnlineShopping.Models.Classes.Class1
@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Shopping</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Spartan',sans-serif;
        }

        h1 {
            font-size: 50px;
            line-height: 64px;
            color: #222;
        }

        h2 {
            font-size: 46px;
            line-height: 54px;
            color: #222;
        }

        h4 {
            font-size: 20px;
            color: #222;
        }

        h6 {
            font-weight: 700;
            font-size: 12px;
        }

        p {
            font-size: 16px;
            color: #465b52;
            margin: 15px 0 20px 0;
        }

        body {
            width: 100%;
        }

        .main {
            width: 100%;
            height: 100%;
            position: absolute;
            background-position: center;
            background-size: cover;
            background-attachment: fixed;
        }

        .form-box {
            width: 400px;
            height: 280px;
            position: relative;
            background: rgba(255, 255, 255, 0.842);
            box-shadow: 0 0 20px 9px rgba(153,153,153,0.705);
            border-radius: 35px;
            margin: 4% auto;
            padding: 10px;
            overflow: hidden;
        }

        .button-box {
            width: 160px;
            margin: 5px auto;
            position: relative;
            box-shadow: 0 0 20px 9px #220d051a;
            border-radius: 35px;
        }

        .toggle-btn {
            position: relative;
            padding: 10px 60px;
            border: none;
            background: transparent;
            outline: none;
            font-size: 13px;
            font-weight: bolder;
            cursor: pointer;
        }

        #btn {
            position: absolute;
            top: 0;
            left: 0;
            width: 160px;
            height: 100%;
            background: linear-gradient(to right,#d5cdcd, #087fce);
            border-radius: 35px;
            transition: .5s;
        }

        .button-box button:nth-child(2) {
            color: #ddd0d0;
        }

        .input-group {
            position: absolute;
            top: 50px;
            width: 320px;
            margin-left: 20px;
            transition: .5s;
        }

        .input-field {
            width: 100%;
            padding: 10px 0;
            border: none;
            margin: 5px 0;
            background: transparent;
            border-bottom: 1px solid rgba(153,153,153,0.705);
            outline: none;
        }

        .submit-btn {
            display: block;
            width: 85%;
            padding: 10px;
            border: none;
            background: linear-gradient(to right, #1c1c2e,#087fce);
            cursor: pointer;
            color: #ffff;
            font-size: 15px;
            font-weight: 600;
            margin: auto;
            outline: none;
            border-radius: 35px;
        }

        .input-group a {
            display: inline-block;
            text-decoration: none;
            color: #777;
            margin: 30px 10px 30px 0px;
            font-size: 12px;
        }

        #Login {
            left: 50px;
        }
    </style>
</head>
<body>
    <div class="main">

        <form class="form-box" action="/MemberHomePage/AddAddress/" method="post">
            <div class="button-box">
                <div id="btn"></div>
                <button type="button" class="toggle-btn" style="color:#5b5959">Adres</button>
            </div>
            <div class="input-group" method="post">
                <input type="text" class="input-field" name="City" placeholder="İl" required />
                <input type="text" class="input-field" name="District" placeholder="İlçe" required />
                <input type="text" class="input-field" name="Address" placeholder="Adres" required />

                <button type="submit" class="btn">Adres Ekle</button>
            </div>

        </form>

        @foreach (var value in Model.value10)
        {
            <form class="form-box" action="/MemberHomePage/Address/" method="post">
                <i class="glyphicon glyphicon-map-marker"></i>
                <div class="input-group" method="post">
                    <input type="text" class="input-field" name="Id" placeholder="Id" required value="@value.Id" hidden />
                    <input type="text" class="input-field" name="City" placeholder="İl" required value="@value.City" />
                    <input type="text" class="input-field" name="District" placeholder="İlçe" required value="@value.District" />
                    <input type="text" class="input-field" name="Address" placeholder="Adres" required value="@value.Address" />

                    <button type="submit" class="btn">Güncelle</button>
                    <a href="/MemberHomePage/RemoveAddress/@value.Id" style="float:right"><i class="glyphicon glyphicon-trash"></i></a>
                </div>

            </form>
        }


    </div>
</body>
</html>


@model MvcOnlineShopping.Models.Entity.TBLCategory
@{
    ViewBag.Title = "FetchCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />
        <label>Ad</label>
        @Html.TextBoxFor(k => k.Name, new { @class = "form-control" })
        <br />
    </div>
    <div><button class="btn btn-group" style="background-color:#680f90; color:#ffffff">Güncelle</button></div>
}
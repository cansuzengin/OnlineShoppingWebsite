@model MvcOnlineShopping.Models.Classes.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Shopping</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Spartan',sans-serif;
        }

        body {
            width: 100%;
        }

        h1 {
            font-size: 50px;
            line-height: 64px;
            color: #222;
        }

        h2 {
            font-size: 46px;
            line-height: 54px;
            color: #222;
        }

        h4 {
            font-size: 20px;
            color: #222;
        }

        h6 {
            font-weight: 700;
            font-size: 12px;
        }

        p {
            font-size: 16px;
            color: #465b52;
            margin: 15px 0 20px 0;
        }

        .section-p1 {
            padding: 40px 20px;
        }

        #single-product {
            display: flex;
            margin-top: 20px;
        }

            #single-product .single-pro-image {
                width: 50%;
                margin-right: 50px;
                margin-left: 60px;
                padding-left: 40px;
            }

            #single-product .single-pro-details {
                width: 50%;
                padding-top: 30px;
                padding-right: 150px;
                padding-left: 0px;
            }

                #single-product .single-pro-details h4 {
                    padding: 40px 0 20px 0;
                }

                #single-product .single-pro-details h2 {
                    font-size: 26px;
                }

                #single-product .single-pro-details select {
                    display: block;
                    padding: 5px 10px;
                    margin-bottom: 10px;
                }

                #single-product .single-pro-details input {
                    width: 50px;
                    height: 47px;
                    padding-left: 10px;
                    font-size: 16px;
                    margin-right: 10px;
                }

                    #single-product .single-pro-details input:focus {
                        outline: none;
                    }

                #single-product .single-pro-details button {
                    background: #088178;
                    color: #fff;
                    width: 100px;
                    height: 40px;
                }

                #single-product .single-pro-details span {
                    line-height: 25px;
                }


        #comment {
            box-sizing: border-box;
            font-size: 14px;
            background: #e9e9e9;
            font-family: system-ui;
        }

        .comment-box, .post-comment .list {
            background: #fff;
            border-radius: 6px;
            box-shadow: 0 2px 2px #0002;
        }

        .comment-session {
            width: 1200px;
            height: auto;
            margin: 0 auto;
        }

        .post-comment .list {
            width: 100%;
            margin-bottom: 12px;
        }

            .post-comment .list .user {
                display: flex;
                padding: 8px;
                overflow: hidden;
            }

                .post-comment .list .user img {
                    height: 38px;
                    width: 38px;
                    margin-right: 10px;
                    border-radius: 50%;
                }

        .comment-session .name {
            text-transform: uppercase;
            font-weight: 500;
        }

        .post-comment .list .day {
            font-size: 12px;
        }

        .post-comment .comment-post {
            padding: 0 0 15px 58px;
        }

        .comment-box {
            padding: 10px;
            overflow: hidden;
        }

            .comment-box .user {
                display: flex;
                width: min-content;
            }

            .comment-box .image img {
                width: 24px;
                height: 24px;
                margin-right: 10px;
                border-radius: 50%;
            }

            .comment-box textarea {
                background: #eee;
                width: -webkit-fill-available;
                height: 152px;
                margin: 10px 0;
                padding: 10px;
                resize: inherit;
                border-radius: 5px;
                border: none;
                box-shadow: 0 0 0 1px #0003;
            }

                .comment-box textarea:focus-visible {
                    box-shadow: inset 0 0 0 1px #009cff;
                }

            .comment-box .comment-submit {
                float: right;
                padding: 6px 10px;
                border: none;
                background: #009cff;
                color: #eee;
                cursor: pointer;
                border-radius: 3px;
            }

                .comment-box .comment-submit:hover {
                    background: #0076bf;
                }

        @@media screen and (max-width:660px) {
            .comment-session {
                width: 100%;
            }
        }

        footer {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

            footer .col {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                margin-bottom: 20px;
            }

            footer h4 {
                font-size: 14px;
                padding-bottom: 20px;
            }

            footer p {
                font-size: 13px;
                margin: 0 0 8px 0;
            }

            footer a {
                font-size: 13px;
                text-decoration: none;
                color: #222;
                margin-bottom: 16px;
            }

            footer .follow {
                margin-bottom: 20px;
            }

                footer .follow i {
                    color: #465b52;
                    padding-right: 4px;
                    cursor: pointer;
                }

            footer .install .row img {
                border: 1px solid #088178;
                border-radius: 6px;
            }

            footer .install img {
                margin: 10px 0 15px 0;
            }

            footer .follow i:hover,
            footer a:hover {
                color: #088178;
            }

            footer .copyright {
                width: 100%;
                text-align: center;
            }

        #comment span {
            font-size: 12px;
            color: rgb(243, 181, 25);
        }



        #product1 {
            text-align: center;
        }

            #product1 .pro {
                width: 22%;
                min-width: 250px;
                padding: 10px 12px;
                border: 1px solid #cce7d0;
                border-radius: 15px;
                cursor: pointer;
                box-shadow: 20px 20px 30px rgba(0,0,0,0.02);
                margin: 15px 0;
                transition: 0.2s ease;
                position: relative;
            }

                #product1 .pro:hover {
                    box-shadow: 20px 20px 30px rgba(0,0,0,0.06);
                }

                #product1 .pro img {
                    width: 90%;
                    border-radius: 20px;
                }

        .section-p1 {
            padding: 40px 1px;
        }

        .section-m1 {
            margin: 40px 0;
        }

        #product1 .pro .des {
            text-align: start;
            padding: 10px 0px;
        }

            #product1 .pro .des span {
                color: #606063;
                font-size: 12px;
            }

            #product1 .pro .des h5 {
                padding-top: 7px;
                color: #1a1a1a;
                font-size: 14px;
            }

            #product1 .pro .des i {
                font-size: 12px;
                color: rgb(243, 181, 25);
            }

            #product1 .pro .des h4 {
                padding-top: 7px;
                font-size: 15px;
                font-weight: 700;
                color: #088178;
            }

        #product1 .pro .cart {
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50px;
            background-color: #e8f6ea;
            font-weight: 500;
            color: #373333;
            border: 1px solid #cce7d0;
            position: absolute;
            bottom: 20px;
            right: 10px;
        }

            #product1 .pro .cart:hover {
                background-color: #eacaca;
            }

        #product1 .pro .heart {
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50px;
            background-color: #e8f6ea;
            font-weight: 500;
            color: #a01212;
            border: 1px solid #cce7d0;
            position: absolute;
            bottom: 20px;
            right: 60px;
        }

            #product1 .pro .heart:hover {
                background-color: #eacaca;
            }


        #product1 .pro-container {
            display: flex;
            justify-content: space-between;
            padding-top: 20px;
            padding-left: 0px;
            padding-right: 300px;
            flex-wrap: wrap;
        }

            #product1 .pro-container a {
                text-decoration: none;
            }
    </style>
</head>
<body>

    <section id="single-product" class="section-p1">

        @foreach (var product in Model.value1)
        {

            <div class="single-pro-image">
                <img src="@product.Image" width="60%" id="MainImg" alt="" />
            </div>
            <div class="single-pro-details">
                <h6>@product.TBLGender.Name - @product.TBLCategory.Name</h6>
                <h4>@product.Name</h4>
                <h2>@product.Price</h2>
                <form action="/ProductPage/AddCart/@product.Id/" method="post">
                    <input type="text" name="CategoryId" id="CategoryId" value="@product.CategoryId" hidden />
                    <input type="text" name="ProductId" id="ProductId" value="@product.Id" hidden />
                    <input type="text" name="MemberId" id="MemberId" value="@Session["Id"]" hidden />
                    <input type="text" name="DateOfAdding" id="DateOfAdding" value="@DateTime.Now" hidden />
                    <input type="number" name="Piece" value="1" min="1" max="5" />
                    <input type="text" name="Price" value="@product.Price" hidden />
                    <select name="Size" id="Size">
                        <option value="null">Select Size</option>
                        <option value="XXL">XXL</option>
                        <option value="XL">XL</option>
                        <option value="L">L</option>
                        <option value="M">M</option>
                        <option value="S">S</option>
                        <option value="XS">XS</option>
                    </select>

                    <button class="normal">Sepete Ekle</button>
                </form>
                <h4>Ürün Detayı</h4>
                <span>@product.Statement</span>
            </div>

        }

    </section>

    <section id="comment" class="section-p1">
        <div class="comment-session">
            <div class="post-comment">
                <div class="list" style="background:#bdb6b6;">
                    <div class="user">
                        <div class="user-meta">
                            <div class="day">Ürün Değerlendirmeleri</div>
                        </div>
                    </div>
                </div>
                @foreach (var value in Model.value7)
                {
                    <div class="list">
                        <div class="user">
                            <div class="user-image"><img src="~/images/istockphoto-1300845620-612x612.jpg" alt="image" /></div>

                            <div class="user-meta">
                                <div class="name">@value.TBLMember.Name @value.TBLMember.Surname</div>
                                <div class="day">@value.Datetime</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="text-warning" style="float:right;">
                                @for (int? x = 0; x < value.Rating; x++)
                                {
                                    <i class="glyphicon glyphicon-star"></i>
                                }
                                @for (int? x = value.Rating; x < 5; x++)
                                {
                                    <i class="glyphicon glyphicon-star-empty"></i>
                                }

                            </span>
                        </div>
                        <div class="comment-post">@value.Comment</div>

                    </div>
                }
            </div>
            <div class="comment-box">
                <div class="user">
                    <div class="image"><img src="~/images/istockphoto-1300845620-612x612.jpg" alt="image" /></div>
                    <div class="name">@Session["Name"] </div>
                </div>
                <form action="/ProductPage/Index/@ViewBag.product2" method="post">
                    <div onmouseout="CRateSelected()" class="form-group" style="float:right;">
                        <span id="span1" onmouseout="CRateOut(1)" onmouseover="CRateOver(1)" onclick="CRateClick(1)" class="glyphicon glyphicon-star-empty"></span>
                        <span id="span2" onmouseout="CRateOut(2)" onmouseover="CRateOver(2)" onclick="CRateClick(2)" class="glyphicon glyphicon-star-empty"></span>
                        <span id="span3" onmouseout="CRateOut(3)" onmouseover="CRateOver(3)" onclick="CRateClick(3)" class="glyphicon glyphicon-star-empty"></span>
                        <span id="span4" onmouseout="CRateOut(4)" onmouseover="CRateOver(4)" onclick="CRateClick(4)" class="glyphicon glyphicon-star-empty"></span>
                        <span id="span5" onmouseout="CRateOut(5)" onmouseover="CRateOver(5)" onclick="CRateClick(5)" class="glyphicon glyphicon-star-empty"></span>
                    </div>

                    <input name="ProductId" id="ProductId" value="@ViewBag.product2" hidden />
                    <input name="MemberId" id="MemberId" value="@Session["Id"]" hidden />
                    <textarea name="Comment" id="Comment" cols="30" rows="10" placeholder="Mesajınız..."></textarea>
                    <input type="hidden" class="form-control" name="Datetime" value="@DateTime.Now" />
                    <input type="hidden" id="ıblRating" name="Rating" />
                    <button class="comment-submit">Gönder</button>
                </form>
            </div>
        </div>
    </section>

    <section id="product1" class="section-p1">
        <div class="pro-container">
            @{
                int index = 0;
                foreach (var value1 in ViewBag.best)
                {
                    foreach (var value in ViewBag.product)
                    {
                        if (value.Id == value1 && index < 4)
                        {
                            index++;
                            <a href="/ProductPage/Index/@value.Id">
                                <div class="pro">
                                    <img src="@value.Image" alt="" />
                                    <div class="des">
                                        <h5>@value.Name</h5>
                                        @if (value.Star != null)
                                        {
                                            <div class="form-group">
                                                <span class="text-warning">
                                                    @for (int? x = 0; x < value.Star; x++)
                                                    {
                                                        <i class="glyphicon glyphicon-star"></i>
                                                    }
                                                    @for (int? x = value.Star; x < 5; x++)
                                                    {
                                                        <i class="glyphicon glyphicon-star-empty"></i>
                                                    }

                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            for (int? x = 0; x < 5; x++)
                                            {
                                                <i class="glyphicon glyphicon-star-empty"></i>
                                            }
                                        }
                                        <h4>@value.Price</h4>
                                    </div>
                                    <a href="/MemberHomePage/AddingCart/@value.Id" class="cart"><i class="fa fa-shopping-bag" aria-hidden="true"></i></a>
                                    @{
                                        var keep = 0;
                                        foreach (var x in ViewBag.like)
                                        {
                                            if (value.Id == x)
                                            {
                                                <a href="/MemberHomePage/AddingLike/@value.Id" class="heart"><i class="glyphicon glyphicon-heart" aria-hidden="true"></i></a>
                                                keep = 1;
                                            }
                                        }

                                        if (keep == 0)
                                        {
                                            <a href="/MemberHomePage/AddingLike/@value.Id" class="heart"><i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i></a>
                                        }

                                    }
                                </div>
                            </a>
                        }
                    }
                }
            }


        </div>
    </section>


    <footer class="section-p1">
        <div class="col">
            <h4>İletişim</h4>
            <p><strong>Adres:</strong> Bosna Hersek Mahallesi Osmanlı Caddesi Konya/Türkiye</p>
            <p><strong>Telefon:</strong> 05354025861</p>
            <p><strong>Çalışma Saatleri:</strong> 08.00 - 22.00, Pazartesi - Cuma</p>
            <div class="follow">
                <h4>Takip Edin </h4>
                <div class="icon">
                    <i class="fab fa-facebook"></i>
                    <i class="fab fa-twitter"></i>
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-youtube"></i>
                </div>
            </div>
        </div>
        <div class="col">
            <h4>Hakkımızda</h4>
            <a href="#">Teslimat Bilgileri</a>
            <a href="#">Gizlilik Politikası</a>
            <a href="#">Şartlar & Koşullar</a>
            <a href="#">Bize Ulaşın</a>
        </div>
        <div class="col">
            <h4>Hesabım</h4>
            <a href="#">Giriş</a>
            <a href="#">Kart Görüntüle</a>
            <a href="#">Şikayet</a>
            <a href="#">Yardım</a>
        </div>
        <div class="col install">
            <h4>Uygulamayı Yükleyin</h4>
            <p>App Store veya Google Play</p>
            <div class="row">
                <img src="~/images/google.png" alt="" style="width:10%" />
                <img src="~/images/store.png" alt="" style="width:10%" />
            </div>
        </div>
        <div class="copyright">
            <p>Konya / 2022</p>
        </div>
    </footer>

    <script type="text/javascript">
        function CRateOut(Rating) {
            for (var i = 1; i <= Rating; i++) {
                $("#span" + i).attr('class', 'glyphicon glyphicon-star-empty');
            }
        }
        function CRateOver(Rating) {
            for (var i = 1; i <= Rating; i++) {
                $("#span" + i).attr('class', 'glyphicon glyphicon-star');
            }
        }
        function CRateClick(Rating) {
            $("#ıblRating").val(Rating);
            for (var i = 1; i <= Rating; i++) {
                $("#span" + i).attr('class', 'glyphicon glyphicon-star');
            }
            for (var i = Rating + 1; i <= 5; i++) {
                $("#span" + i).attr('class', 'glyphicon glyphicon-star-empty');
            }
        }
        function CRateSelected() {
            var Rating = $("#ıblRating").val();
            for (var i = 1; i <= Rating; i++) {
                $("#span" + i).attr('class', 'glyphicon glyphicon-star');
            }
        }
    </script>
</body>
</html>